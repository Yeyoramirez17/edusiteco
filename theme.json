{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "840px",
            "wideSize": "1024px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Plus Jakarta Sans",
                    "slug": "plus-jakarta-sans",
                    "fontFamily": "'Plus Jakarta Sans', sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Plus Jakarta Sans",
                            "fontWeight": "300",
                            "fontStyle": "light",
                            "src": [
                                "file:./assets/fonts/Plus_Jakarta_Sans/static/PlusJakartaSans-Light.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Plus Jakarta Sans",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Plus_Jakarta_Sans/static/PlusJakartaSans-Regular.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Plus Jakarta Sans",
                            "fontWeight": "500",
                            "fontStyle": "medium",
                            "src": [
                                "file:./assets/fonts/Plus_Jakarta_Sans/static/PlusJakartaSans-Medium.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Plus Jakarta Sans",
                            "fontWeight": "600",
                            "fontStyle": "semi-bold",
                            "src": [
                                "file:./assets/fonts/Plus_Jakarta_Sans/static/PlusJakartaSans-SemiBold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Plus Jakarta Sans",
                            "fontWeight": "700",
                            "fontStyle": "bold",
                            "src": [
                                "file:./assets/fonts/Plus_Jakarta_Sans/static/PlusJakartaSans-Bold.ttf"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "1.2rem"
                },
                {
                    "name": "Normal",
                    "slug": "normal",
                    "size": "1.6rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "3.6rem"
                },
                {
                    "name": "Larger",
                    "slug": "larger",
                    "size": "4.8rem"
                }
            ],
            "fluid": true
        },
        "color": {
            "palette": [
                {
                    "slug": "prussian-blue",
                    "color": "#003049",
                    "name": "Azul de Prusia"
                },
                {
                    "slug": "fire-engine-red",
                    "color": "#d62828",
                    "name": "Rojo de Bomberos"
                },
                {
                    "slug": "orange-wheel",
                    "color": "#f77f00",
                    "name": "Naranja Rueda"
                },
                {
                    "slug": "xanthous",
                    "color": "#fcbf49",
                    "name": "Xanthous"
                },
                {
                    "slug": "vanilla",
                    "color": "#eae2b7",
                    "name": "Vainilla"
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "'Plus Jakarta Sans', sans-serif",
            "fontSize": "1.6rem",
            "lineHeight": "1.5"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "48px",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "36px",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "24px",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "20px",
                    "fontWeight": "600",
                    "lineHeight": "1.5"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "18px",
                    "fontWeight": "600",
                    "lineHeight": "1.6"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "16px",
                    "fontWeight": "600",
                    "lineHeight": "1.6"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "fontWeight": "500"
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSize": "1.6rem",
                    "fontWeight": "600"
                },
                "dimensions": {
                    "blockGap": ".5rem"
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        }
    ],
    "customTemplates": [
        {
            "name": "page-vision",
            "title": "Vision Page",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "page-directory",
            "title": "Directory Page",
            "postTypes": [
                "page"
            ]
        }
    ]
}