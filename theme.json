{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "640rem",
            "wideSize": "1200rem"
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Nunito Sans",
                    "slug": "nunito-sans",
                    "fontFamily": "'Nunito Sans', sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "'Nunito Sans', sans-serif",
                            "fontWeight": "300",
                            "fontStyle": "light",
                            "src": [ "file:./assets/fonts/Nunito_Sans/NunitoSans-Light.ttf" ]
                        },
                        {
                            "fontFamily": "'Nunito Sans', sans-serif",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [ "file:./assets/fonts/Nunito_Sans/NunitoSans-Regular.ttf" ]
                        },
                        {
                            "fontFamily": "'Nunito Sans', sans-serif",
                            "fontWeight": "500",
                            "fontStyle": "medium",
                            "src": [ "file:./assets/fonts/Nunito_Sans/NunitoSans-Medium.ttf" ]
                        },
                        {
                            "fontFamily": "'Nunito Sans', sans-serif",
                            "fontWeight": "600",
                            "fontStyle": "semi-bold",
                            "src": [ "file:./assets/fonts/Nunito_Sans/NunitoSans-SemiBold.ttf" ]
                        },
                        {
                            "fontFamily": "'Nunito Sans', sans-serif",
                            "fontWeight": "700",
                            "fontStyle": "bold",
                            "src": [ "file:./assets/fonts/Nunito_Sans/NunitoSans-Bold.ttf" ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "slug": "small",
                    "size": "1.2rem"
                },
                {
                    "name": "Normal",
                    "slug": "normal",
                    "size": "1.6rem"
                },
                {
                    "name": "Large",
                    "slug": "large",
                    "size": "3.6rem"
                },
                {
                    "name": "Larger",
                    "slug": "larger",
                    "size": "4.8rem"
                }
            ],
            "fluid": true
        },
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [ "px", "em", "rem", "%" ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "'Nunito Sans', sans-serif",
            "fontSize": "1.6rem",
            "lineHeight": "1.5"
        },
        "spacing": {
            "padding": "0",
            "blockGap": "1.6rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "48px",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "36px",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "24px",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "20px",
                    "fontWeight": "600",
                    "lineHeight": "1.5"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "18px",
                    "fontWeight": "600",
                    "lineHeight": "1.6"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "16px",
                    "fontWeight": "600",
                    "lineHeight": "1.6"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "typography": {
                    "fontWeight": "500"
                }
            },
            "core/group": {
                "spacing": {
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "0"
                    },
                    "blockGap": "1rem"
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        }
    ]
}